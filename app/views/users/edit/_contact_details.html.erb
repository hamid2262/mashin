<%= simple_form_for(resource, 
	:as => resource_name, 
	:url => registration_path(resource_name), 
	:html => { :method => :put, class: 'form-horizontal' },
 	:defaults => { 
 		:wrapper_html => {
 			:class => 'form-group'
 		}, 
 		:input_html => { 	:class => 'form-control'}
 	}			) do |f| %>

	<div class="col-sm-3">
		<%= f.label :tel, User.human_attribute_name('tel') %>
	</div>
	<div class="col-sm-8">
		<%= f.input :tel, label: false %>
	</div>

	<div class="col-sm-3">
		<%= f.label :mobile, User.human_attribute_name('mobile') %>
	</div>
	<div class="col-sm-8">
		<% if f.object.mobile.blank? %>
			<%= f.input :mobile, label: false , wrapper_html: { class: 'form-group has-error' }, input_html: {:autofocus => true}, placeholder: t(".mobile_placeholder") %>
		<% else %>		
			<%= f.input :mobile, label: false %>
		<% end %>
	</div>

	<div class="col-sm-3">
		<%= f.label :location, t('location') %>
	</div>
	<div class="col-sm-8">
		<% if f.object.location.blank? %>
			<%= f.input :location, label: false, input_html: {id: 'location_city'}, wrapper_html: { class: 'form-group has-error' }, placeholder: t(".location_placeholder")  %>
		<% else %>		
			<%= f.input :location, label: false, input_html: {id: 'location_city'}, placeholder: t(".location_placeholder")  %>
		<% end %>
	</div>	

	<div class="col-sm-3">
		<%= f.label :address, User.human_attribute_name('address') %>
	</div>
	<div class="col-sm-8">
		<%= f.input :address, label: false %>
	</div>

	<%= f.button :submit, {class: 'btn  btn-primary col-sm-offset-3'} %>

	<%= f.hidden_field :tab, :value => "contact_details" %>
		  
<% end %>