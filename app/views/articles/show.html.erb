<% @page_title = @article.title + "otoyabi.ir" %>

<div id="article_show" class="col-sm-8">
  <div  class="panel panel-default">  
    <%= link_to [@article.topic, @article], title: @article.title do %>
      <h2><%= @article.title %></h2>
    <% end %>
    <div class="panel-body article_complete">
      <%= render "articles/show/#{@article.source}_body"  %>
    </div>
    <div class="panel-footer">
      <%= link_to @article.topic.name, @article.topic, title: @article.topic.name %>
    </div>
  </div>
</div>

<div id="articles_list" class="col-sm-4">
  <%= render 'topics/index/list', topic: @article.topic  %>
</div>