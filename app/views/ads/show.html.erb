<% @page_title = title_creator(@ad) %>
<% @description = "#{@page_title}, #{@ad.details}" %>

<% breadcrumb :ad, @ad %>
<div id="ad_show">
  <div id="main-panel" class="panel panel-default">
    <div id="main-panel-heading" class="panel-heading">
      <%= render 'ads/show/title' %>
    </div>

    <div id="main-panel-body" class="panel-body">
      <div id="image_section" class="col-sm-5 internal-section">
        <%= render 'ads/show/image_section' %>
      </div>

      <div id="car_details" class="col-sm-4 internal-section">
        <%= render 'ads/show/car_details', ad: @ad %>
      </div>

      <div id="user_overview" class="col-sm-3 internal-section">
        <%= render 'ads/show/user_overview' %>
      </div>
    </div>

    <div id="recommended_ads-panel-body" class="panel-body">
      <%= render 'ads/show/recommended_ads' %>
    </div>
    <%= render 'shared/breadcrumbs' if @ad.built_year %>
    <%= render 'ads/show/car_model_list' %>
  </div>
</div>