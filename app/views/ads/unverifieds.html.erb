
<h1>Listing ads</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Model</th>
      <th>Year</th>
      <th>Details</th>
      <th>Price</th>
      <th>Millage</th>
      <th>Fuel type</th>
      <th>Girbox</th>
      <th>Body color</th>
      <th>Internal color</th>
      <th>status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.user %></td>
        <td><%= ad.car_model_id %></td>
        <td><%= ad.year %></td>
        <td><%= ad.details %></td>
        <td><%= ad.price %></td>
        <td><%= ad.millage %></td>
        <td><%= ad.fuel %></td>
        <td><%= ad.girbox %></td>
        <td><%= ad.body_color_id %></td>
        <td><%= ad.internal_color_id %></td>
        <td><%= ad.status %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'verify', verify_ads_path(id: ad.id) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

