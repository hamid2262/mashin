<div class="panel panel-default">
  <div class="panel-heading no_background">
    <h3 class="panel-title"><%= t ".seller_details" %></h3>
  </div>
  <div class="panel-body">
    <%= two_column_title_value 5,7, "name", @ad.user.name if @ad.user %>
    <%= two_column_title_value 5,7, "location", @ad.location %>
    <%= two_column_title_value 5,7, "contact_tel", ad_tel(@ad) %>
    <%= two_column_title_value 5,7, ".created_date", date_human(@ad.created_at) %>
    <% if @ad.updated_at - @ad.created_at > 100 %>
      <%= two_column_title_value 5,7, ".updated_date", date_human(@ad.updated_at) %>     
    <% end %>
    <% unless @ad.user_id %>
      <%= link_to "source", @ad.source_url, class: "source_url"  %>
    <% end %>

    <% if [5, 50].include? @ad.status %>
      <div class="ad_not_active"><%= t ".ad_expired_message" %></div>
    <% end %>
    <% if [4, 40].include?  @ad.status%>
      <div class="ad_not_active"><%= t ".ad_soled_message" %></div>
    <% end %>
  </div>
</div>