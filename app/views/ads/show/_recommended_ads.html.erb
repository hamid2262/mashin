<div class="panel panel-default">
  <div class="panel-heading"><%= t ".recommended_ads" %></div>

  <div class="wrapper-panel panel-body">
    <% if @recommended_ads %>
      <% @recommended_ads.each do |ad| %>
        <div class="recommended_ad  col-sm-3 col-xs-6">
          <div class="panel panel-default">
            <%= link_to ad, title: ad_seo_title(ad) do %>
              <div class="panel-body">

                <div class="col-sm-6">
                  <div class="row"><%= thumb_image ad  %></div>
                </div>
                <div class="col-sm-6">
                  <p><%= ad.make_name %></p>
                  <p><%= ad.car_model_name %></p>
                  <p><%= appropriate_year(ad) %></p>
                  <p><%= price_human(ad.price) %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>  
  </div>
</div>