<div class="panel panel-default">
  <div class="panel-heading">
    <% if ad.built_year %>
      <%= render 'shared/breadcrumbs' %>
    <% else %>
      <%= t ".car_details" %>
    <% end %>
  </div>
  <div class="panel-body">
    <%= render 'ads/show/car_details/car_details_body', ad: ad %>
    <% if ad.built_year %>
      <%= link_to ["info",ad.make,ad.car_model, ad.built_year], class: "btn btn-info" do %>    
        مشخصات فنی <%= built_year_title(ad.built_year) %>
      <% end %>
    <% elsif ad.car_model and ad.make and ad.make.slug.present? %>  
      <%= link_to " مشخصات فنی خودرو #{ad.make.name} #{ad.car_model.name}", infos_make_car_model_path(make_id: ad.make.slug, id: ad.car_model) %>
    <% end %>
  </div>
</div>

    
