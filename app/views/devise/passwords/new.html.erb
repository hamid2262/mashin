<div id="sign_in_form" class="col-sm-6">
  <h2><%= t ".Forgot your password?" %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="col-xs-12">
      <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control input-lg"} %>
    </div>
    <div class="col-xs-12">
      <%= f.button :submit, t(".Send me reset password instructions"), class: "btn btn-warning btn-lg btn-block" %>
    </div>
  <% end %>

  <div class="col-xs-12">
    <%= link_to t('sign_in'), new_session_path(resource_name), class: "btn btn-link" %>
    <%= link_to t('sign_up'), new_registration_path(resource_name), class: "btn btn-link pull-left " %>
  </div>
</div>