<div  class="panel panel-default">  
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to subtopic.name , subtopic_path %> </h3>
  </div>  

  <div class="panel-body">

    <div class="col-sm-7">
      <%= render 'topics/show/first_article', article: subtopic.articles.first %>
    </div>

    <div class="col-sm-5">
      <ul>
        <% subtopic.articles.limit(8).each do |article| %>
         <li><%= link_to article.title, [@topic, article] %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>