<% @page_title = title_creator(@search) %>
<div id="search_show">
  <div id="search_bar" class="col-sm-5 col-md-3">
    <%= render 'search_form' %>
    <%= render 'searches/filters/makes' %>
  </div>

  <div id="search_list" class="col-sm-7 col-md-9">
  	<% if @ads.any? %>

      <div class="apple_pagination">
        <%= will_paginate @ads, :container => false,inner_window: 3, outer_window: 0 %>
      </div>

  		<% @ads.each do |ad| %>
      <a href="<%= ad_path(ad) %>" >
  			<div class="search_row">
  				<%= render 'ad', ad: ad %>
  			</div>
      </a>
  		<% end %>

     <div class="apple_pagination">
        <%= will_paginate @ads, :container => false,inner_window: 3, outer_window: 0 %>
      </div>
    <% else %>
      <p id="err_msg"><%= t".no_resault_message" %></p>
  	<% end %>
  </div>
</div>