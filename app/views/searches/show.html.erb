<div id="search_show">
  <div id="search_form" class="col-sm-5 col-md-3">
    <%= render 'search_form' %>
  </div>
  <div id="search_list" class="col-sm-7 col-md-9">
  	<% if @ads %>
  		<% @ads.each do |ad| %>
      <a href="<%= ad_path(ad) %>" >
  			<div class="search_row">
  				<%= render 'ad', ad: ad %>
  			</div>
      </a>
  		<% end %>
  	<% end %>
  </div>
</div>
