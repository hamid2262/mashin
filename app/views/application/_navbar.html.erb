 <div id="top_navbar">
  <div class=" navbar navbar-default  navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_path %>">
          <%= image_tag("#{IMAGES_PATH}logo.gif", class: "logo") %>
        </a>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav  navbar-left">
            <% if current_user and current_user.is_admin? %>
           <li>
              <%= link_to  admin_path, class: "text-nav" do %>
                admin
                <span class="badge"><%= Ad.unverified_count %></span>
              <% end %>
            </li>
          <% end %>

          <li>
            <%= link_to  searches_path, class: "text-nav" do %>
              <%= t(".buy_car") %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </li>
          <li>
            <%= link_to  new_ad_path, class: "text-nav" do %>
              <%= t(".sell_car") %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </li>
        </ul>  

        <ul class="nav navbar-nav ">
          <% if user_signed_in? %>
            <li><%= link_to t("home"), dashboard_path %></li>
            <li><%= link_to "(#{current_user.name})#{t ".my_acount"}", current_user %></li>
            <li><%= link_to t(".sign_out"), destroy_user_session_path, method: :delete %></li>
            <%#= link_to t(".dashboard"), dashboard_path %>
          <% else %>
            <%#= render 'popup_signin' %>
            <li><%= link_to t("sign_in"), user_session_path, class: "text-nav " %></li>
            <li><%= link_to t("sign_up"), new_user_registration_path, class: "text-nav " %></li>
          <% end %> 
        </ul>
      </div><!--/.nav-collapse -->

    </div>
  </div>
</div>